<p id="notice"><%= notice %></p>


<head>
<title>Kingocean Logbook</title>
<meta charset="utf-8">


<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">

<div class="container text-center">

      <div class="jumbotron" align="center">
      <%= image_tag("KINGOCEANLOGOPLAIN.JPG", :width => 400, :crop => "pad" ) %>
      <br>
      <br>
        <h4><%= Time.now.strftime("%m/%d/%Y") %></h4>
        <%= form_tag signins_path, :method => 'get' do %>
          <%= text_field_tag :search, params[:search], placeholder: 'YEAR-MM-DD' %>
          <%= submit_tag "Search", class: "btn-secondary" %>
          <% end %>
                      
      </div>
      
      
      
      <%= link_to 'Sign In' , new_signin_path, class: "btn btn-success btn-lg btn-block text-white" %>
      <br>
      <%= link_to 'Home' , "../", class: "btn btn-primary btn-lg btn-block text-white" %>
      <br>
      <div class="container text-center">
      <table class="table table-striped table-bordered">
        <thead class="thead-dark">
          <tr>
            <th>Name</th>
            <th>Company</th>
            <th>Purpose</th>
          </tr>
        </thead>

        <tbody>
          <% @signins.each do |signin| %>
            <tr>
              <td><%= link_to signin.name , edit_signin_path(signin), class: "text-dark"%></td>
              <td><%= signin.company %></td>
              <td><%= signin.purpose %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

</div>
      <p>
      _________________________________________
      <br>
      Download Today's log:
      <%= link_to "Excel", signins_path(format: "xls") %> |
      <%= link_to "CSV", signins_path(format: "csv", :search => @search) %>
    </p>
</div>

